{
  "name": "betfind",
  "version": "1.0.0",
  "private": true,
  "description": "MrBets.ai - AI-powered sports prediction platform",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/betfind.git"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn app.main:app --reload",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm run start",
    "lint:frontend": "cd frontend && npm run lint",
    "update-fixtures": "cd frontend && npm run update-fixtures",
    "generate-predictions": "cd frontend && npm run generate-predictions",
    "cron:daily-update": "cd frontend && npm run cron:daily-update",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "backend:install": "pip install -r backend/requirements.txt",
    "backend:dev": "cd backend && uvicorn app.main:app --reload",
    "check-monorepo": "bash ./scripts/check-monorepo.sh",
    "postinstall": "npm run check-monorepo",
    "security:check": "npm audit && cd frontend && npm audit"
  },
  "keywords": [
    "ai",
    "sports",
    "predictions",
    "betting",
    "nextjs",
    "fastapi",
    "supabase",
    "monorepo"
  ],
  "author": "MrBets.ai Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 